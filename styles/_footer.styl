/* Copyright */
.footer
  position: absolute;
  bottom: 0;
  width: 100%;
  /* Set the fixed height of the footer here */
  height: 60px;
  line-height: 60px;
  background-color: $footer-bg
  .copyright
    background: $topbar-bg
    color: $footer-text
    text-align: center
    a
      color: $footer-link
      &:hover
        text-decoration: none
    ul.links
      margin-top: 10px
      text-align: center
      li
        display: inline
        list-style: none
        a
          color: $footer-link
